@model Progetto_UI.Web.Features.Inserimento.InserimentoViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Interfaccia di Inserimento</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            background-color: #6063A0;
            color: white;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        }

        .overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            display: none;
            justify-content: center;
            align-items: center;
        }

        .overlay-content {
            background-color: #5c5cad;
            padding: 20px;
            border-radius: 8px;
            color: white;
            text-align: center;
        }

            .overlay-content button {
                margin-top: 10px;
                padding: 10px;
                border: none;
                background-color: white;
                color: black;
                font-weight: bold;
                border-radius: 4px;
            }
    </style>
</head>
<body>
    <a href="@Url.Action("Home", "Inserimento")" class="btn btn-dark back-home">
        <i class="bi bi-house-door-fill"></i> Home
    </a>

    <div class="container my-5">
        <div class="mb-4">
            @section pageTitleContent {
                Inserimento Pezzo
            }
            <label for="productInput" class="form-label">Inserisci manualmente il codice del Pezzo</label>
            <input type="text" id="productInput" class="form-control mb-2" placeholder="Codice pezzo" />
            <label for="productCode" class="form-label">Fotografa il codice del Pezzo</label>
            <button id="captureProduct" class="btn btn-secondary w-100 mb-2">
                <i class="bi bi-camera-fill"></i>&nbsp;Fotografa
            </button>
            <p id="productCode" class="text-center">Codice Pezzo:</p>
        </div>

        <div class="mb-4">
            <label for="areaInput" class="form-label">Inserisci manualmente il codice dell'Area</label>
            <input type="text" id="areaInput" class="form-control mb-2" placeholder="Codice area" />
            <label for="areaCode" class="form-label">Fotografa il codice dell'Area</label>
            <button id="captureArea" class="btn btn-secondary w-100 mb-2">
                <i class="bi bi-camera-fill"></i>&nbsp;Fotografa
            </button>
            <p id="areaCode" class="text-center">Codice Area:</p>
        </div>

        <button id="insertBtn" class="btn btn-primary w-100">Inserisci</button>
    </div>

    <div id="overlay" class="overlay">
        <div class="overlay-content">
            <p>Il pezzo è stato registrato nell'area indicata</p>
            <button id="closeOverlay" class="btn btn-light mt-3">Chiudi</button>
        </div>
    </div>

    <script>
        document.getElementById("insertBtn").addEventListener("click", async function () {
            const productInput = document.getElementById("productInput").value;
            const areaInput = document.getElementById("areaInput").value;

            // Validazione semplice
            if (!productInput || !areaInput) {
                alert("Inserisci sia il codice pezzo che il codice area.");
                return;
            }

            try {
                const response = await fetch('@Url.Action("AssignPieceToSpace", "Inserimento")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                    },
                    body: JSON.stringify({
                        Id: parseInt(productInput),
                        spaceId: parseInt(areaInput)
                    })
                });

                const result = await response.json();
                if (result.success) {
                    document.getElementById("overlay").style.display = "flex";
                } else {
                    alert("Errore: " + (result.message || "Impossibile assegnare il pezzo all'area."));
                }
            } catch (error) {
                alert("Errore di rete o server.");
            }
        });

        document.getElementById("closeOverlay").addEventListener("click", function () {
            document.getElementById("overlay").style.display = "none";
        });
    </script>
</body>