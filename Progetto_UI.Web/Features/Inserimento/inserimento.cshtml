@model Progetto_UI.Web.Features.Inserimento.InserimentoViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Interfaccia di Inserimento</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            background-color: #6063A0;
            color: white;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        }

        .overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            display: none;
            justify-content: center;
            align-items: center;
        }

        .overlay-content {
            background-color: #5c5cad;
            padding: 20px;
            border-radius: 8px;
            color: white;
            text-align: center;
        }

            .overlay-content button {
                margin-top: 10px;
                padding: 10px;
                border: none;
                background-color: white;
                color: black;
                font-weight: bold;
                border-radius: 4px;
            }
    </style>
</head>
<body>
    <a href="@Url.Action("Home", "Inserimento")" class="btn btn-dark back-home">
        <i class="bi bi-house-door-fill"></i> Home
    </a>

    <div class="container my-5">
        <div class="mb-4">
            @section pageTitleContent {
            Inserimento Pezzo
            }
            <label for="productCode" class="form-label">Fotografa il codice del Pezzo</label>
            <button id="captureProduct" class="btn btn-secondary w-100 mb-2">
                <i class="bi bi-camera-fill"></i>&nbsp;Fotografa
            </button>
            <p id="productCode" class="text-center">Codice Pezzo:</p>
        </div>

        <div class="mb-4">
            <label for="areaCode" class="form-label">Fotografa il codice dell'Area</label>
            <button id="captureArea" class="btn btn-secondary w-100 mb-2">
                <i class="bi bi-camera-fill"></i>&nbsp;Fotografa
            </button>
            <p id="areaCode" class="text-center">Codice Area:</p>
        </div>

        <button id="insertBtn" class="btn btn-primary w-100">Inserisci</button>
    </div>

    <div id="overlay" class="overlay">
        <div class="overlay-content">
            <p>Il pezzo è stato registrato nell'area indicata</p>
            <button id="closeOverlay" class="btn btn-light mt-3">Chiudi</button>
        </div>
    </div>

    <script>
        const productCodeEl = document.getElementById('productCode');
        const areaCodeEl = document.getElementById('areaCode');
        const overlay = document.getElementById('overlay');
        const closeOverlayBtn = document.getElementById('closeOverlay');

        async function fetchRandomItem(url, element, label) {
            try {
                const response = await fetch(url);
                if (!response.ok) throw new Error(`Errore nel recupero dei dati da ${url}`);

                const data = await response.json();
                if (data.length === 0) {
                    alert(`Nessun ${label} trovato!`);
                    return;
                }

                const randomItem = data[Math.floor(Math.random() * data.length)];
                element.textContent = `${label}: ${randomItem.name || randomItem.SpaceId}`;
            } catch (error) {
                console.error("Errore API:", error);
                alert(`Errore nel recupero dei dati!`);
            }
        }

        document.getElementById('captureProduct').addEventListener('click', () => {
            fetchRandomItem('/Consegna/GetAllProducts', productCodeEl, 'Codice Pezzo');
        });

        document.getElementById('captureArea').addEventListener('click', () => {
            fetchRandomItem('/Consegna/GetAllSpaces', areaCodeEl, 'Codice Area');
        });

        document.getElementById('insertBtn').addEventListener('click', () => {
            overlay.style.display = 'flex';
        });

        closeOverlayBtn.addEventListener('click', () => {
            overlay.style.display = 'none';
            productCodeEl.textContent = 'Codice Pezzo:';
            areaCodeEl.textContent = 'Codice Area:';
        });
    </script>
</body>
