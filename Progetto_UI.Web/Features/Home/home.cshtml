@model Progetto_UI.Web.Features.Home.HomeViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestione Semi-elaborati</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            background-color: #023047;
            color: white;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        }

        .image-section {
            text-align: center;
            margin-bottom: 20px;
            position: relative;
        }

            .image-section img {
                width: 100%;
                height: auto;
                max-height: 250px;
                object-fit: cover;
            }

            .image-section .title {
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                font-size: 2rem;
                font-weight: bold;
                color: black;
                background-color: rgba(255, 255, 255, 0.7);
                display: inline-block;
                padding: 0.5rem 1rem;
                border-radius: 0.5rem;
            }

        .button-section {
            text-align: center;
            margin: 0 20px;
        }

        .button-row {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-bottom: 100px;
        }

            .button-row .btn {
                width: 150px;
            }

        .btn-secondary {
            background-color: #808080;
            border: none;
            color: white;
        }

            .btn-secondary:hover {
                background-color: #6c757d;
            }

        .arrows-in {
            color: #eeeeee;
        }

        .arrows-out {
            color: #212529;
        }

        .home-btn {
            z-index: 1000;
        }

    </style>
</head>
<body>
    <a href="@Url.Action("Login", "Home")" class="btn btn-dark home-btn position-fixed top-0 start-0 m-3">
        <i class="bi bi-box-arrow-left"></i>Login
    </a>

    <div class="image-section">
        <img src="./icons/warehouse.jpg" alt="Warehouse">
        <h1 class="title">Gestione Semi-elaborati</h1>
    </div>

    <div class="button-section">
        <div class="button-row">
            <div>
                <a href="@Url.Action("Inserimento", "Home")" class="btn btn-primary d-flex align-items-center justify-content-center">
                    Inserimento &nbsp;<i class="bi bi-arrow-90deg-left arrows-in"></i>
                </a>
            </div>
            <div>
                <a href="@Url.Action("Consegna", "Home")" class="btn btn-primary d-flex align-items-center justify-content-center">Consegna &nbsp;<i class="bi bi-arrow-90deg-right arrows-out"></i></a>
            </div>
        </div>
        <a href="@Url.Action("Spostamento", "Home")" class="btn btn-secondary my-3 w-50">Spostamento &nbsp;&nbsp;<i class="bi bi-arrow-down-up"></i></a>
        <a href="@Url.Action("Ricerca", "Home")" class="btn btn-secondary my-3 w-50">Ricerca &nbsp;<i class="bi bi-search"></i></a>
        <a href="#" id="stampaInvBtn" class="btn btn-secondary my-3 w-50">Stampa Inv. &nbsp;<i class="bi bi-printer-fill"></i></a>
    </div>

    <script>
        document.getElementById('stampaInvBtn').addEventListener('click', function () {
            const rows = [
                ["Area", "Codice Pezzo"],
                ...Array.from({ length: 10 }, () => {
                    if (Math.random() > 0.7) {
                        return ["", ""];
                    } else {
                        return [
                            `A${Math.floor(Math.random() * 100)}`,
                            `P${Math.floor(Math.random() * 100)}`
                        ];
                    }
                })
            ];

            let csvContent = "data:text/csv;charset=utf-8,"
                + rows.map(e => e.join(",")).join("\n");

            const encodedUri = encodeURI(csvContent);
            const link = document.createElement("a");
            link.setAttribute("href", encodedUri);
            link.setAttribute("download", "inventario.csv");
            document.body.appendChild(link);

            link.click();
            document.body.removeChild(link);
        });
    </script>
</body>
</html>