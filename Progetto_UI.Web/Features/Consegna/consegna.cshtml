@model Progetto_UI.Web.Features.Consegna.ConsegnaViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Interfaccia di Consegna</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            background-color: #6063A0;
            color: white;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        }

        .overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            display: none;
            justify-content: center;
            align-items: center;
        }

        .overlay-content {
            background-color: #5c5cad;
            padding: 20px;
            border-radius: 8px;
            color: white;
            text-align: center;
        }

            .overlay-content button {
                margin-top: 10px;
                padding: 10px;
                border: none;
                background-color: white;
                color: black;
                font-weight: bold;
                border-radius: 4px;
            }
    </style>
</head>
<body>
    <a href="@Url.Action("Home", "Consegna")" class="btn btn-dark back-home">
        <i class="bi bi-house-door-fill"></i> Home
    </a>

    <div class="container my-5">

        <div class="mb-4">
            @section pageTitleContent {
            Consegna Pezzo
            }
            <label for="areaInput" class="form-label">Inserisci manualmente il codice dell'Area</label>
            <input type="text" id="areaInput" class="form-control mb-2" placeholder="Codice area" />
            <label for="productCode" class="form-label">Fotografa il codice del Pezzo</label>
            <button id="captureProduct" class="btn btn-secondary w-100 mb-2"><i class="bi bi-camera-fill"></i>&nbsp;Fotografa</button>
            <p id="productCode" class="text-center">Codice Pezzo: @Model.ProductCode</p>
        </div>
        <button id="insertBtn" class="btn btn-primary w-100">Inserisci</button>
    </div>
    <div id="overlay" class="overlay">
        <div class="overlay-content">
            <p>Il pezzo Ã¨ stato consegnato</p>
            <button id="closeOverlay" class="btn btn-light mt-3">Chiudi</button>
        </div>
    </div>

    <script>
        document.getElementById('insertBtn').addEventListener('click', async () => {
            const spaceRaw = document.getElementById('areaInput').value;
            const spaceId = spaceRaw.trim();

            if (!spaceId) {
                alert('Inserisci un codice area valido.');
                return;
            }

            const url = `/Consegna/RemovePieceFromSpace?spaceId=${encodeURIComponent(spaceId)}`;
            try {
                const response = await fetch(url, { method: 'POST' });
                const result = await response.json();

                if (result.success) {
                    document.getElementById('overlay').style.display = 'flex';
                } else {
                    alert("Errore: " + result.message);
                }
            } catch (err) {
                alert("Errore di rete o server.");
            }
        });
        document.getElementById("closeOverlay").addEventListener("click", function () {
            document.getElementById("overlay").style.display = "none";
            productCode.textContent = 'Codice Pezzo:';
        });
    </script>
</body>
