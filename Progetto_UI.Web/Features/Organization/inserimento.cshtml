@page
@model Progetto_UI.Web.Features.Organization.InserimentoController
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Interfaccia di Inserimento</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #6063A0;
            color: white;
        }

        .overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.9);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 1050;
            visibility: hidden;
        }

            .overlay.visible {
                visibility: visible;
            }

        .back-home {
            position: fixed;
            top: 10px;
            left: 10px;
            z-index: 1100;
            background-color: black;
        }
    </style>
</head>
<body>
    <a href="/home" class="btn btn-outline-secondary back-home">
        <i class="bi bi-house-door-fill"></i> Home
    </a>

    <div class="container my-5">
        <h1 class="text-center mb-4">Interfaccia di inserimento</h1>

        <div class="mb-4">
            <label for="productCode" class="form-label">Fotografa il codice del Pezzo</label>
            <button id="captureProduct" class="btn btn-secondary w-100 mb-2">Fotografa</button>
            <p id="productCode" class="text-center">Codice Pezzo: ........</p>
        </div>

        <div class="mb-4">
            <label for="areaCode" class="form-label">Fotografa il codice dell'Area</label>
            <button id="captureArea" class="btn btn-secondary w-100 mb-2">Fotografa</button>
            <p id="areaCode" class="text-center">Codice Area: ........</p>
        </div>
        <button id="insertBtn" class="btn btn-primary w-100">Inserisci</button>
    </div>

    <div id="overlay" class="overlay">
        <div class="text-center">
            <p>Il pezzo è stato registrato nell'area indicata</p>
            <button id="closeOverlay" class="btn btn-light mt-3">Chiudi</button>
        </div>
    </div>

    <script>
        const productCodeEl = document.getElementById('productCode');
        const areaCodeEl = document.getElementById('areaCode');
        const overlay = document.getElementById('overlay');
        const closeOverlayBtn = document.getElementById('closeOverlay');

        function generateRandomCode(prefix) {
          return `${prefix}${Math.floor(Math.random() * 100000).toString().padStart(5, '0')}`;
        }

        document.getElementById('captureProduct').addEventListener('click', () => {
          const randomProductCode = generateRandomCode('P');
          productCodeEl.textContent = `Codice Pezzo: ${randomProductCode}`;
        });

        document.getElementById('captureArea').addEventListener('click', () => {
          const randomAreaCode = generateRandomCode('A');
          areaCodeEl.textContent = `Codice Area: ${randomAreaCode}`;
        });

        document.getElementById('insertBtn').addEventListener('click', () => {
          overlay.classList.add('visible');
        });

        closeOverlayBtn.addEventListener('click', () => {
          overlay.classList.remove('visible');
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
</body>
</html>
