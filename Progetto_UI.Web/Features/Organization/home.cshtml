@page
@model Progetto_UI.Web.Features.Organization.OrgHomeController
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestione Semi-elaborati</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #6793AC;
            color: white;
        }

        .image-section {
            text-align: center;
            margin-bottom: 20px;
        }

            .image-section img {
                width: 100%;
                max-height: 250px;
                object-fit: cover;
            }

            .image-section .title {
                margin-top: -300px;
                font-size: 2rem;
                font-weight: bold;
                color: black;
                background-color: rgba(255, 255, 255, 0.7);
                display: inline-block;
                padding: 0.5rem 1rem;
                border-radius: 0.5rem;
            }

        .button-section {
            text-align: center;
            margin: 0 20px;
        }

        .button-row {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-bottom: 100px;
        }

            .button-row .btn {
                width: 150px;
            }

        .btn-secondary {
            background-color: #808080;
            border: none;
            color: white;
        }

            .btn-secondary:hover {
                background-color: #6c757d;
            }

        .arrows {
            font-size: 2rem;
            color: white;
        }

    </style>
</head>
<body>
    <a href="/login" class="btn btn-outline-light home-btn position-fixed top-0 start-0 m-3">
        <i class="bi bi-house-door-fill"></i> Login
    </a>

    <div class="image-section">
        <img src="./icons/warehouse.jpg" alt="Warehouse">
        <h1 class="title">Gestione Semi-elaborati</h1>
    </div>

    <div class="button-section">
        <div class="button-row">
            <div>

                <a href="/inserimento" class="btn btn-secondary">Inserimento</a>
                <div class="arrows arrow-up">↑</div>
            </div>
            <div>
                <a href="/consegna" class="btn btn-secondary">Consegna</a>
                <div class="arrows arrow-down">↓</div>
            </div>
        </div>
        <a href="/spostamento" class="btn btn-secondary my-3 w-50">Spostamento</a>
        <a href="/ricerca" class="btn btn-secondary my-3 w-50">Ricerca</a>
        <a href="#" class="btn btn-secondary my-3 w-50">Stampa Inv.</a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
</body>
</html>