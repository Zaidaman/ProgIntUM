@page
@model Progetto_UI.Web.Features.OrgController.HomeController
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestione Semi-elaborati</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #6793AC;
            color: white;
        }

        .header img {
            position: absolute;
            left: 10px;
            top: 10px;
            width: 40px;
            height: 40px;
            cursor: pointer;
        }

        .image-section {
            position: relative;
            text-align: center;
            color: black;
        }

            .image-section img {
                width: 100%;
                max-height: 300px;
                object-fit: cover;
            }

            .image-section .title {
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                background-color: rgba(255, 255, 255, 0.7);
                padding: 0.5rem 1rem;
                border-radius: 0.5rem;
            }

        .home-btn {
            position: fixed;
            top: 10px;
            left: 10px;
            z-index: 1100;
            background-color: black;
        }
    </style>
</head>
<body>
    <a asp-page="/login" class="btn btn-outline-light home-btn">
        <i class="bi bi-house-door-fill"></i> Login
    </a>

    <div class="image-section">
        <img src="~/icons/warehouse.jpg" alt="Warehouse">
        <h1 class="title display-4">Gestione dei Semi Lavorati</h1>
    </div>

    <div class="button-section d-flex flex-column align-items-center p-3">
        <a asp-page="/inserimento" class="btn btn-primary my-3 w-50">Inserimento</a>
        <a asp-page="/consegna" class="btn btn-primary my-3 w-50">Consegna</a>
        <a asp-page="/ricerca" class="btn btn-primary my-3 w-50">Inventario</a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
</body>
</html>
