@page
@model Progetto_UI.Web.Features.OrgController.InserimentoController
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fotocamera con Bootstrap</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.8);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 1050;
            visibility: hidden;
        }

            .overlay.visible {
                visibility: visible;
            }

        .back-home {
            position: fixed;
            top: 10px;
            left: 10px;
            z-index: 1100;
            background-color: black;
        }

        #camera {
            display: none;
        }

            #camera.visible {
                display: block;
            }
    </style>
</head>
<body>
    <a asp-page="/home" class="btn btn-outline-secondary back-home">
        <i class="bi bi-house-door-fill"></i> Home
    </a>

    <div class="container my-5">
        <h1 class="text-center">Inserimento e spostamento prodotti</h1>

        <div class="d-flex flex-column align-items-center gap-3">
            <p class="text-center">Usa questo bottone per inserire un oggetto in uno spazio.</p>
            <button id="btnProdottoArea" class="btn btn-primary">Inserimento</button>
            <p class="text-center">Usa questo bottone per spostare un'oggetto in un'altro spazio.</p>
            <button id="btnAreaArea" class="btn btn-secondary">Spostamento</button>
        </div>
    </div>

    <div id="overlay" class="overlay">
        <div class="text-center">
            <p id="overlayText">Testo della foto scattata</p>
            <button id="confirmBtn" class="btn btn-success mt-3">Conferma</button>
        </div>
    </div>

    <video id="camera" class="w-100"></video>

    <script src="https://cdn.jsdelivr.net/npm/tesseract.js@2.1.4/dist/tesseract.min.js"></script>
    <script>
        const overlay = document.getElementById('overlay');
        const overlayText = document.getElementById('overlayText');
        const confirmBtn = document.getElementById('confirmBtn');
        const camera = document.getElementById('camera');

        const startCamera = async () => {
            const stream = await navigator.mediaDevices.getUserMedia({ video: true });
            camera.srcObject = stream;
            camera.play();
            camera.classList.add('visible');
        };

        const capturePhoto = () => {
            const canvas = document.createElement('canvas');
            canvas.width = camera.videoWidth;
            canvas.height = camera.videoHeight;
            const context = canvas.getContext('2d');
            context.drawImage(camera, 0, 0, canvas.width, canvas.height);
            return canvas.toDataURL('image/png');
        };

        const recognizeText = async (imageData) => {
            const result = await Tesseract.recognize(imageData, 'eng');
            return result.data.text;
        };

        const handleButtonClick = async (promptText1, promptText2) => {
            await startCamera();
            alert(promptText1);
            const photo1 = capturePhoto();
            const text1 = await recognizeText(photo1);

            alert(promptText2);
            const photo2 = capturePhoto();
            const text2 = await recognizeText(photo2);

            camera.classList.remove('visible');
            overlayText.textContent = `${promptText1}: ${text1}\n${promptText2}: ${text2}`;
            overlay.classList.add('visible');
        };

        document.getElementById('btnProdottoArea').addEventListener('click', () => {
            handleButtonClick("Foto Prodotto", "Foto Area");
        });

        document.getElementById('btnAreaArea').addEventListener('click', () => {
            handleButtonClick("Foto Area 1", "Foto Area 2");
        });

        confirmBtn.addEventListener('click', () => {
            overlay.classList.remove('visible');
            alert("Confermato!");
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
</body>
</html>
